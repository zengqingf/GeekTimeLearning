<?xml version="1.0" encoding="utf-8"?>
<!-- steps to add to build additions -->
<root xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- init section is always evaluated once per architecture -->
	<init>
		<setBool result="bSupported" value="false" />
		<isArch arch="armeabi-v7a">
			<setBool result="bSupported" value="true" />
		</isArch>
		<isArch arch="arm64-v8a">
	    <setBool result="bSupported" value="true"/>
	  </isArch>
		<isArch arch="x86">
	    <setBool result="bSupported" value="false"/>
	  </isArch>
	</init>

	<!-- optional files or directories to copy to Intermediate/Android/APK -->
  <resourceCopies>
		<copyDir src="$S(PluginDir)/libs/$S(Architecture)/" dst="$S(BuildDir)/libs/$S(Architecture)/" />
		<!--<isArch arch="armeabi-v7a">
			<copyFile src="$S(BuildDir)/../../../plugins/UWAGOT/Source/ThirdParty/UWALib/libs/armeabi-v7a/libuwa.so" dst="$S(BuildDir)/libs/armeabi-v7a/libuwa.so" />
		</isArch>
		<isArch arch="arm64-v8a">
			<copyFile src="$S(BuildDir)/../../../plugins/UWAGOT/Source/ThirdParty/UWALib/libs/arm64-v8a/libuwa.so" dst="$S(BuildDir)/libs/arm64-v8a/libuwa.so" />
		</isArch>
		<isArch arch="x86">
			<copyFile src="$S(BuildDir)/../../../plugins/UWAGOT/Source/ThirdParty/UWALib/libs/x86/libuwa.so" dst="$S(BuildDir)/libs/x86/libuwa.so" />
		</isArch>-->
	</resourceCopies>

	<!-- optional libraries to load in GameActivity.java before libUE4.so -->
	<soLoadLibrary>
		<if condition="bSupported">
			<true>
				<loadLibrary name="uwa" />
			</true>
		</if>
	</soLoadLibrary>
</root>
