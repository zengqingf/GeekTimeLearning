<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="260dp"
    android:layout_gravity="center"
    android:background="@drawable/com_sswl_dialog_bg"
    android:orientation="vertical">

    <include
        layout="@layout/com_sswl_fragment_top"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/et_account"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/com_sswl_edittext_bg"
        android:drawableStart="@drawable/com_sswl_login_edittext_account_icon"
        android:drawableLeft="@drawable/com_sswl_login_edittext_account_icon"
        android:drawableEnd="@drawable/com_sswl_login_edittext_drop"
        android:drawableRight="@drawable/com_sswl_login_edittext_drop"
        android:drawablePadding="8dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/com_sswl_hint_account"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textColor="@color/com_sswl_color_edittext"
        android:textColorHint="@color/com_sswl_color_edittext_bg_grey"
        android:textSize="15sp"
        android:singleLine="true"
        android:imeOptions="flagNoExtractUi|flagNoFullscreen"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/com_sswl_btn_bg"
        android:text="@string/com_sswl_btn_login"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_retrieve_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/com_sswl_retrieve_pwd"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_other_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="@string/com_sswl_other_login"
            android:textColor="@android:color/black" />
    </RelativeLayout>


</LinearLayout>