<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_item_container"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="8dp"
        android:background="@drawable/com_sswl_float_layout_bg"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/ll_account"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:drawableTop="@drawable/com_sswl_float_icon_account"
            android:gravity="center_horizontal"
            android:drawablePadding="1dp"
            android:text="@string/com_sswl_account"
            android:textColor="@color/com_sswl_color_float_text"
            android:textSize="8sp" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="22dp"
            android:src="@drawable/com_sswl_dash_line_portrait" />

        <TextView
            android:id="@+id/ll_cs"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:drawableTop="@drawable/com_sswl_float_icon_cs"
            android:gravity="center_horizontal"
            android:text="@string/com_sswl_cs"
            android:textColor="@color/com_sswl_color_float_text"
            android:textSize="8sp" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="22dp"
            android:src="@drawable/com_sswl_dash_line_portrait" />

        <LinearLayout
            android:id="@+id/ll_notice"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_notice"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:src="@drawable/com_sswl_float_icon_notice_statue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="1dp"
                android:text="@string/com_sswl_notice"
                android:textColor="@color/com_sswl_color_float_text"
                android:textSize="8sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="22dp"
            android:src="@drawable/com_sswl_dash_line_portrait" />

        <TextView
            android:id="@+id/ll_gift"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:drawableTop="@drawable/com_sswl_float_icon_gift"
            android:drawablePadding="2dp"
            android:gravity="center_horizontal"
            android:text="@string/com_sswl_gift"
            android:textColor="@color/com_sswl_color_float_text"
            android:textSize="8sp" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="22dp"
            android:src="@drawable/com_sswl_dash_line_portrait" />

        <TextView
            android:id="@+id/ll_safe_app"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:drawableTop="@drawable/com_sswl_float_icon_safeapp"
            android:drawablePadding="1dp"
            android:gravity="center_horizontal"
            android:text="@string/com_sswl_safe_app"
            android:textColor="@color/com_sswl_color_float_text"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/iv_dismiss"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/com_sswl_float_icon_back" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/com_sswl_float_icon_logo" />

</FrameLayout>