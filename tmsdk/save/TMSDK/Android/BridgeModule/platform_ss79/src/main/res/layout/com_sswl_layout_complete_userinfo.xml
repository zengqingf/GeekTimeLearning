<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#333333"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">
        <ImageView
            android:id="@+id/iv_warning"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/com_sswl_login_icon_warnning"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_toRightOf="@id/iv_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:text="@string/com_sswl_complete_userinfo_remind"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:textSize="15sp" />
    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/com_sswl_close_circle_icon" />

        <Button
            android:id="@+id/btn_complete"
            android:layout_toLeftOf="@id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/com_sswl_btn_complete_userinfo"
            android:textColor="@android:color/white"
            android:background="@drawable/com_sswl_btn_green_bg" />

</RelativeLayout>