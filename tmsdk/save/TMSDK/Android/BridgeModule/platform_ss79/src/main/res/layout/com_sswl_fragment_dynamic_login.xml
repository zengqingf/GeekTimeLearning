<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="260dp"
    android:layout_gravity="center"
    android:background="@drawable/com_sswl_dialog_bg"
    android:orientation="vertical">

    <include
        layout="@layout/com_sswl_fragment_top"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="@string/com_sswl_input_dynamic_pwd_tip"
        android:textColor="@color/com_sswl_color_text_grey1"
        android:textSize="15sp" />

   <EditText
       android:id="@+id/et_dynamic_code"
       android:layout_width="200dp"
       android:layout_height="30dp"
       android:layout_marginTop="20dp"
       android:layout_gravity="center_horizontal"
       android:background="@drawable/com_sswl_edittext_bg"
       android:hint="@string/com_sswl_hint_dynamic_pwd"
       android:textColor="@color/com_sswl_color_edittext"
       android:singleLine="true"
       android:imeOptions="flagNoExtractUi|flagNoFullscreen"
       android:textSize="15sp"
       android:gravity="center"/>
    
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/com_sswl_btn_bg"
            android:text="@string/com_sswl_btn_cancel"
            android:textColor="@android:color/white"/>
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/com_sswl_btn_bg"
            android:text="@string/com_sswl_btn_confirm"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


</LinearLayout>