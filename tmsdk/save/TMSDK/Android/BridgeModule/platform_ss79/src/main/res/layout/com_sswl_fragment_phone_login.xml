<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="260dp"
    android:layout_gravity="center"
    android:background="@drawable/com_sswl_dialog_bg"
    android:orientation="vertical">

    <include
        layout="@layout/com_sswl_fragment_top"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/com_sswl_edittext_bg"
        android:drawableLeft="@drawable/com_sswl_login_edittext_phone_icon"
        android:drawablePadding="8dp"
        android:hint="@string/com_sswl_hint_phone_num"
        android:inputType="phone"
        android:textColor="@color/com_sswl_color_edittext"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:singleLine="true"
        android:imeOptions="flagNoExtractUi|flagNoFullscreen"
        android:textColorHint="@color/com_sswl_color_edittext_bg_grey"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_vercode"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/com_sswl_edittext_bg"
            android:drawableLeft="@drawable/com_sswl_login_edittext_vercode_icon"
            android:drawablePadding="8dp"
            android:hint="@string/com_sswl_hint_vercode"
            android:inputType="number"
            android:singleLine="true"
            android:imeOptions="flagNoExtractUi|flagNoFullscreen"
            android:textColor="@color/com_sswl_color_edittext"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColorHint="@color/com_sswl_color_edittext_bg_grey"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_send_vercode"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/com_sswl_vercode_btn_bg"
            android:text="@string/com_sswl_btn_vercode"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:background="@drawable/com_sswl_btn_bg"
        android:text="@string/com_sswl_btn_login"
        android:textColor="@android:color/white"
        android:textSize="16sp" />


</LinearLayout>
