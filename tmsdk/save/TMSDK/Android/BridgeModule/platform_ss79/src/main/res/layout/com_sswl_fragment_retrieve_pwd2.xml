<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="260dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:background="@drawable/com_sswl_dialog_bg"
    android:orientation="vertical">

    <include
        layout="@layout/com_sswl_fragment_top"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="25dp"
        android:textColor="@color/com_sswl_color_text_grey"
        android:layout_gravity="center_horizontal"
        tools:text="您的账号为：u4992923,请输入新密码"/>

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/com_sswl_edittext_bg"
        android:drawableLeft="@drawable/com_sswl_login_edittext_pwd_icon"
        android:drawablePadding="8dp"
        android:hint="@string/com_sswl_hint_pwd"
        android:textColor="@color/com_sswl_color_edittext"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textColorHint="@color/com_sswl_color_edittext_bg_grey"
        android:textSize="15sp"
        android:singleLine="true"
        android:imeOptions="flagNoExtractUi|flagNoFullscreen"/>


    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:background="@drawable/com_sswl_btn_bg"
        android:text="@string/com_sswl_btn_confirm"
        android:textSize="16sp"
        android:textColor="@android:color/white" />

</LinearLayout>