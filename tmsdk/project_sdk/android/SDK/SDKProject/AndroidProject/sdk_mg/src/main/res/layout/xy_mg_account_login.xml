<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="280dp"
    android:layout_gravity="center"
    android:background="@drawable/com_xy_login_white_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/mg_ic_back" />

        <ImageView
            android:id="@+id/login_holder_mg_icon"
            android:layout_width="145dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:src="@drawable/login_logo" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_title"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/xy_phone_regin_bg" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/mg_login_account" />

            <AutoCompleteTextView
                android:id="@+id/xy_reg_account_et"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@null"
                android:completionThreshold="2"
                android:dropDownHorizontalOffset="0dp"
                android:dropDownVerticalOffset="2dp"
                android:ems="20"
                android:hint="6-20个数字或者字母"
                android:imeOptions="flagNoExtractUi"
                android:inputType="text"
                android:maxLength="20"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:singleLine="true"
                android:textSize="14sp" >
            </AutoCompleteTextView>

            <ImageView
                android:id="@+id/login_holder_drop_iv"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/com_xy_xylogin_dropdown" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/xy_phone_regin_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <ImageView
                android:id="@+id/login_pwd_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/mg_login_pwd" />

            <ImageView
                android:id="@+id/hide_show_pwd_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/mg_login_eye_close" />

            <EditText
                android:id="@+id/xy_reg_pwd_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@id/hide_show_pwd_iv"
                android:layout_toRightOf="@id/login_pwd_iv"
                android:background="@null"
                android:hint="6-20个数字或者字母"
                android:inputType="textPassword"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/reg_next_tv"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/xy_quick_login_save_bg"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_holder_login_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mg_find_pwd" />

                <TextView
                    android:id="@+id/find_pwd_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="找回密码"
                    android:textColor="#4c4c4c"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#c8c8c8" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/mg_reg_icon_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mg_quick_register" />

                <TextView
                    android:id="@+id/register_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="right"
                    android:text="立即注册"
                    android:textColor="#4c4c4c"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>