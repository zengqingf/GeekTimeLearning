<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    >
    
     <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white" >

        <LinearLayout 
            android:id="@+id/gift_detail_back_ll"
            android:layout_width="45dp"
            android:layout_height="45dp"
           	android:gravity="center"
            >
            <ImageView 
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/mg_ic_toolbar_back"
                />
        </LinearLayout> 
         
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="礼包详情"
            android:textColor="@color/text_4c"
            android:textSize="17sp" />
    </RelativeLayout>
    <View 
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/title_layout"
        android:background="@color/mg_line"
        />
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_line"
        >
    
	    <LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:orientation="vertical"
	        >
	    
		    <TextView 
		        android:id="@+id/gift_name_tv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/black"
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="10dp"
		        android:textStyle="bold"
		        android:textSize="16sp"
		        />
		    <TextView 
		        android:id="@+id/gift_left_tv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/text_4c"
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="10dp"
		        android:textSize="12sp"
		        />
		    
		    <TextView 
		        android:id="@+id/gift_get_tv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
				android:textSize="14sp"
				android:textColor="@color/white"
				android:paddingTop="5dp"
		        android:paddingBottom="5dp"
		        android:paddingLeft="20dp"
		        android:paddingRight="20sp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="10dp"
		        android:background="@drawable/shape_solid_corner_gray_gift"
			    />
		    
		    <View 
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:layout_marginTop="10dp"
		        android:background="@color/mg_line"
		        />
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="礼包内容"
		        android:textStyle="bold"
		        android:textColor="@color/black"
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="10dp"
		        android:textSize="16sp"
		        />
		    <TextView 
		        android:id="@+id/gift_txt_tv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/text_4c"
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="10dp"
		        android:textSize="14sp"
		        />
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="使用方法"
		        android:textStyle="bold"
		        android:textColor="@color/black"
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="10dp"
		        android:textSize="16sp"
		        />
		    <TextView 
		        android:id="@+id/gift_desc_tv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/text_4c"
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="10dp"
		        android:textSize="12sp"
		        />
		    
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="有效期"
		        android:textStyle="bold"
		        android:textColor="@color/black"
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="10dp"
		        android:textSize="16sp"
		        />
		    <TextView 
		        android:id="@+id/gift_period_tv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/text_4c"
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="10dp"
		        android:textSize="12sp"
		        />
	    </LinearLayout>
    
    </ScrollView>
    
    <LinearLayout 
        android:id="@+id/loading_view_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        >
	    <ImageView 
	        android:id="@+id/mImageLoading"
	        android:layout_width="15dp"
	        android:layout_height="15dp"
	        android:visibility="gone"
	        />
    </LinearLayout>

</RelativeLayout>
